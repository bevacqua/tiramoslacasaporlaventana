ul,
ol
  margin 0
  padding 0
  list-style-position inside

ul
  list-style-type disc

b,
strong,
  font-weight bold

i,
em,
  font-style italic

ins
  text-decoration none

del
  text-decoration line-through

a,
button,
input,
textarea,
img
  outline 0

input,
button
  border-radius 0

img
  max-width 100%
  border none
  display block

button
  border none
  background none

input,
textarea
  fn-input()

h1,
h2,
h3,
h4,
h5,
h6
  margin 0

p
  margin 20px 0
  &:first-child
    margin-top 0
  &:last-child
    margin-bottom 0

table
  padding 10px
  margin 0 10px

td
  padding-right 10px

iframe
  display block

@media only screen and (min-width: 500px)
  table
    margin 0 40px
